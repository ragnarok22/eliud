# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments user max_line_length = 79
[*.py]
max_line_length = 88

[*.json]
indent_size = 2
insert_final_newline = false

[{*.yml, *.yaml}]
indent_size = 2
